{% extends '::base.html.twig' %}

{% block body -%}
    <h1>PedidoDescripcion list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pdtoid</th>
                <th>Drogueriaid</th>
                <th>Cantidadpedida</th>
                <th>Productocodigo</th>
                <th>Productocodigobarras</th>
                <th>Productodescripcion</th>
                <th>Productopresentacion</th>
                <th>Productoprecio</th>
                <th>Productomarcado</th>
                <th>Productoreal</th>
                <th>Productoiva</th>
                <th>Productodescuento</th>
                <th>Productofecha</th>
                <th>Productoestado</th>
                <th>Cantidadfinal</th>
                <th>Productofoto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('pedidodescripcion_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.pdtoId }}</td>
                <td>{{ entity.drogueriaId }}</td>
                <td>{{ entity.cantidadPedida }}</td>
                <td>{{ entity.productoCodigo }}</td>
                <td>{{ entity.productoCodigoBarras }}</td>
                <td>{{ entity.productoDescripcion }}</td>
                <td>{{ entity.productoPresentacion }}</td>
                <td>{{ entity.productoPrecio }}</td>
                <td>{{ entity.productoMarcado }}</td>
                <td>{{ entity.productoReal }}</td>
                <td>{{ entity.productoIva }}</td>
                <td>{{ entity.productoDescuento }}</td>
                <td>{% if entity.productoFecha %}{{ entity.productoFecha|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.productoEstado }}</td>
                <td>{{ entity.cantidadFinal }}</td>
                <td>{{ entity.productoFoto }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('pedidodescripcion_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pedidodescripcion_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('pedidodescripcion_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
